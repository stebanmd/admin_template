@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Admin Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- stylesheets -->
    <link rel="stylesheet" type="text/css" href="~/css/compiled/theme.css" />
    <link rel="stylesheet" type="text/css" href="~/css/vendor/brankic.css" />
    <link rel="stylesheet" type="text/css" href="~/css/vendor/ionicons.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/vendor/font-awesome.min.css" />
</head>
<body id="signin">
    <a href="" class="logo"><i class="brankic-pen"></i></a>
    <h3>Bem vindo!</h3>
    <div class="content">
        <form method="post" asp-action="Login">
            <div class="fields">
                <strong>E-mail:</strong>
                <input class="form-control" type="email" id="email" name="email" placeholder="email@exemplo.com" />
            </div>
            <div class="fields">
                <strong>Senha:</strong>
                <input class="form-control" type="password" id="pass" name="pass" placeholder="Sua senha" />
            </div>
            <div class="info">
                <a asp-action="ForgottenPassword">Esqueci minha Senha</a>
            </div>
            <div class="actions">
                <button class="btn btn-primary btn-lg" type="submit">Entrar com sua conta</button>
            </div>
        </form>
    </div>

</body>
</html>